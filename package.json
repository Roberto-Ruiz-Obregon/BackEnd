{
    "name": "roberto-ruiz-obregon-server",
    "version": "1.0.0",
    "description": "A server for the non-profit org Roberto Ruiz Obregon.",
    "main": "index.js",
    "scripts": {
        "test": "cross-env NODE_ENV=test && jest --forceExit --runInBand",
        "start": "cross-env NODE_ENV=production node index.js",
        "build": "cross-env NODE_ENV=production node index.js",
        "start:dev": "nodemon index.js",
        "start:prod": "cross-env NODE_ENV=production nodemon index.js",
        "debug": "ndb index.js",
        "deploy": "jest && firebase deploy --only functions",
        "serve": "firebase emulators:start --only functions",
        "doc": "jsdoc -c jsconf.json",
        "watch:js": "parcel watch ./public/js/index.js --out-dir ./public/js --out-file bundle.js --public-url /js",
        "build:js": "parcel build ./public/js/index.js --out-dir ./public/js --out-file bundle.js --public-url /js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Roberto-Ruiz-Obregon/BackEnd.git"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@babel/polyfill": "^7.12.1",
        "@google-cloud/storage": "^5.8.5",
        "axios": "^0.24.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "busboy": "^0.2.14",
        "compression": "^1.7.4",
        "content-type": "^1.0.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express-fileupload": "^1.2.1",
        "express-mongo-sanitize": "^2.1.0",
        "express-rate-limit": "^3.5.0",
        "firebase": "^8.6.8",
        "firebase-admin": "^11.5.0",
        "firebase-functions": "^4.2.0",
        "firebase-tools": "^11.24.0",
        "googleapis": "^118.0.0",
        "helmet": "^4.6.0",
        "hpp": "^0.2.3",
        "html-to-text": "^9.0.4",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.13.13",
        "morgan": "^1.10.0",
        "multer": "^1.4.4",
        "nodemailer": "^6.9.1",
        "parcel": "^2.8.3",
        "parcel-bundler": "^1.12.5",
        "pug": "^3.0.2",
        "raw-body": "^2.3.2",
        "sharp": "^0.29.3",
        "slugify": "^1.6.4",
        "stripe": "^8.199.0",
        "validator": "^13.7.0",
        "xhr2": "^0.2.1",
        "xss-clean": "^0.1.1"
    },
    "bugs": {
        "url": "https://github.com/Roberto-Ruiz-Obregon/BackEnd/issues"
    },
    "homepage": "https://github.com/Roberto-Ruiz-Obregon/BackEnd#readme",
    "devDependencies": {
        "cross-env": "^7.0.3",
        "jest": "^29.5.0",
        "jsdoc": "^4.0.2",
        "mongodb-memory-server": "^8.12.2",
        "supertest": "^6.3.3"
    },
    "engines": {
        "node": "16"
    },
    "jest": {
        "testEnvironment": "node",
        "testTimeout": 60000,
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ]
    }
}
